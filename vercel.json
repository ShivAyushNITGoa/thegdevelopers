{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "outputDirectory": ".vercel/output",
  "framework": "nextjs",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    },
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true
    }
  },
  "github": {
    "enabled": true,
    "silent": false
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "env": {
    "SITE_URL": "https://gdevelopers.com",
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "apps/main/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "apps/blog/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "apps/docs/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/blog(.*)",
      "dest": "apps/blog$1"
    },
    {
      "src": "/docs(.*)",
      "dest": "apps/docs$1"
    },
    {
      "src": "/(.*)",
      "dest": "apps/main/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
} 